
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SinusSkateboards.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <a asp-page="./Varukorg" class="cart">
        <i class="fa fa-shopping-cart"></i>
    </a>
    <header>
        <div class="container mb-4">
            <a class="logobig" asp-area="" asp-page="/Index"><img src="~/images/logos/sinus-logo-landscape-large.png" width="300" height="100" /></a>
        </div>
        <div class="container mb-3">
            <nav class="navigation">

                <a asp-area="" asp-page="/Index">Hompage</a>

                <a asp-area="" asp-page="./ProductList">All Products</a>

            </nav>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
